{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        { 
            "label": "Generate Player update",
            "detail": "Generates a Player update file from an existing yocto build",
            "type": "shell",
            "command": "python3 ./build_scripts/do_packageExistingYoctoBundleAsUpdate.py ./ /media/charliehall/samsung/rpi_64_yocto/raspberrypi4-64/tmp/deploy/images/raspberrypi4-64/castboard-rpi-image-dev-raspberrypi4-64.tar ./build/update/ "
        },


        {
            "label": "Run Debug eLinux X64",
            "type": "shell",
            "command": "flutter-elinux run --dart-define=ELINUX_IS_ELINUX=true --dart-define=ELINUX_TMP_PATH=/tmp/ --dart-define=ELINUX_HOME_PATH=/home/charliehall "
        },
        {
            "label": "Build Release eLinux X64",
            "type": "shell",
            "command": "flutter-elinux build --dart-define=ELINUX_IS_ELINUX=true --dart-define=ELINUX_TMP_PATH=/tmp/ --dart-define=ELINUX_HOME_PATH=/home/charliehall "
        },
        {
            "label": "Build Debug eLinux Arm64",
            "type": "shell",
            "command": "flutter-elinux build elinux --dart-define=ELINUX_IS_ELINUX=true --dart-define=ELINUX_TMP_PATH=/tmp/ --dart-define=ELINUX_HOME_PATH=/home/cage --target-arch=arm64 --target-sysroot=/opt/ubuntu18-arm64-sysroot --system-include-directories=/usr/aarch64-linux-gnu/include/c++/9/aarch64-linux-gnu --debug ",
        },
        {
            "label": "Build Release eLinux Arm64",
            "type": "shell",
            "command": "python3 ./build_scripts/buildRpiRelease.py",
        },
        {
            // Installs the castboard_remote from the latest Yocto build into the static_debug location on the rpi.
            "label": "Install debug castboard_remote",
            "type": "shell",
            "command": "ssh root@10.101.1.2 mkdir -p /static_debug/web_app/ && scp -r /media/charliehall/samsung/rpi_64_yocto/raspberrypi4-64/tmp/sysroots-components/aarch64/castboard-remote/usr/share/castboard-remote/web/* root@10.101.1.2:/static_debug/web_app/"
        },
        {
            "label": "Deploy Debug to Rpi4",
            "type": "shell",
            "dependsOn": ["Build Debug eLinux Arm64"],
            "command": "ssh root@10.101.1.2 systemctl stop cage@tty7 && sleep 5 && rm -rf /usr/share/castboard-player/ && scp -r ./build/elinux/arm64/debug/bundle/* root@10.101.1.2:/usr/share/castboard-player/ && ssh root@10.101.1.2 mv /usr/share/castboard-player/castboard_player /usr/share/castboard-player/player && ssh root@10.101.1.2 systemctl start cage@tty7"
        },

        {
            "label": "Deploy Release to Rpi4",
            "type": "shell",
            "dependsOn": ["Build Release eLinux Arm64"],
            "command": "ssh root@10.101.1.2 systemctl stop cage@tty7 && sleep 5 && rm -rf /usr/share/castboard-player/ && scp -r ./build/elinux/arm64/release/bundle/* root@10.101.1.2:/usr/share/castboard-player/ && ssh root@10.101.1.2 systemctl start cage@tty7"
        },
        
    ]
}